{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "exclude": [
          "**/vendor/**",
          "**/wp-includes/**",
          "!/var/www/wordpress/wp-content/plugins/wolfiz-solar-estimator/**"
      ],
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "ignore": [
          "**/vendor/**",
          "/var/www/wordpress/wp-includes/**"
      ],
        "port": 9000
      }
    ]
  }